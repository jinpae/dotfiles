if has('win32') || has('win64')
  set guifont=Consolas_for_Powerline_FixedD:h11:cANSI
else
  set guifont=Monaco:h12
endif

set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L
set lines=46
set columns=110

set novisualbell
set noerrorbells
set nocursorline

colorscheme gruvbox
set background=dark
